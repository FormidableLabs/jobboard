<ul class="listing-group">

<% if @listings.count > 0 %>

  <% @listings.each do |l| %>
    <li class="listing">
      <a href="<%= listing_path(l.id) %>">
        <strong class="listing-bow listing-section">
          <span><%= l.company_name %></span>
        </strong>

        <div class="listing-section listing-title">
          <h3 class="listing-title-content">
            <%= l.title %>
          </h3>
        </div>

        <div class="listing-stern listing-section">
          Feb 25
        </div>
      </a>
    </li>
  <% end %>
  </ul>

<% else %>
<p>Sorry, there are no results for that query.</p>
<% end %>
